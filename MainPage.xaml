<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab2.MainPage"
             BackgroundColor="White">

        <Grid RowDefinitions="Auto, *">

        <Grid Grid.Row="0" BackgroundColor="#fcba03" Padding="20, 30">
                <Label Text="Mohamad Hanif BCS23020031" 
                   TextColor="Black" 
                   FontSize="24"
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />
            </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="15" Padding="20">

                <Image Source="cat.png"
                       Aspect="AspectFill"
                       HeightRequest="350"
                       />

                <Border BackgroundColor="#FFFBEA"
                        Padding="20"
                        Stroke="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15" />
                        </Border.StrokeShape>

                        <Grid RowDefinitions="Auto, Auto, Auto, Auto" 
                          ColumnDefinitions="*, Auto" 
                          RowSpacing="5">

                            <Label Grid.Row="0" Grid.Column="0" 
                               Text="Nyanko" 
                               TextColor="Black"
                               FontSize="28" 
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>

                            <Label Grid.Row="0" Grid.Column="1" 
                               Text="♂" 
                               FontSize="28" 
                               TextColor="#6CACEE"
                               VerticalOptions="Center"/>

                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="Cat" 
                               TextColor="Gray"
                               FontSize="16"/>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="8" Margin="0,10,0,0">
                                <Label Text="🕒" VerticalOptions="Center" FontSize="16"/>
                                <Label Text="2 years old" VerticalOptions="Center" TextColor="Gray" FontSize="14"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Spacing="8">
                                <Label Text="📍" VerticalOptions="Center" FontSize="16"/>
                                <Label Text="Sibu,Sarawak" VerticalOptions="Center" TextColor="Gray" FontSize="14"/>
                            </HorizontalStackLayout>

                        </Grid>
                    </Border>

                    <Grid ColumnDefinitions="Auto, *, Auto" Padding="10" VerticalOptions="Center">
                        <Image Grid.Column="0" 
                           Source="max.jpeg" 
                           HeightRequest="60" 
                           WidthRequest="60" 
                           Aspect="AspectFill">
                            <Image.Clip>
                                <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30" />
                            </Image.Clip>
                        </Image>

                    <VerticalStackLayout Grid.Column="1" Padding="15,0" VerticalOptions="Center" Spacing="2">
                        <Label Text="Max" FontAttributes="Bold" FontSize="16" TextColor="Black" />
                        <Label Text="Owner" TextColor="Gray" />
                    </VerticalStackLayout>
                        
                    <Label Grid.Column="2" 
                           Text="21/10/2025" 
                           TextColor="Gray"
                           VerticalOptions="Center"/>
                    </Grid>

                    <Label Text="A funny little loaf of happiness." 
                       TextColor="Gray"
                       FontSize="16"
                       Padding="10"/>

                    <Grid ColumnDefinitions="Auto, *" ColumnSpacing="15" Padding="10">
                        <Button Grid.Column="0" 
                            Text="♡" 
                            FontSize="24" 
                            BackgroundColor="White" 
                            TextColor="Gray" 
                            BorderColor="LightGray" 
                            BorderWidth="1" 
                            CornerRadius="30" 
                            HeightRequest="60" 
                            WidthRequest="60" />

                        <Button Grid.Column="1" 
                            Text="Adoption" 
                            BackgroundColor="#FFC107" 
                            TextColor="Black" 
                            CornerRadius="30" 
                            HeightRequest="60" 
                            FontAttributes="Bold" 
                            FontSize="18"/>
                    </Grid>

                </VerticalStackLayout>
            </ScrollView>
        </Grid>

    </ContentPage>




